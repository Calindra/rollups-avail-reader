# Required Configuration

## WebSocket endpoint for the blockchain connection
CARTESI_BLOCKCHAIN_WS_ENDPOINT=
## PostgreSQL connection string
CARTESI_DATABASE_CONNECTION=


# Server Configuration

## Host to bind the HTTP server
AVAIL_READER_SERVER_HOST=0.0.0.0
## Port for the HTTP server
AVAIL_READER_SERVER_PORT=8080
## HTTP server timeout in seconds
AVAIL_READER_SERVER_TIMEOUT=30
## Port for Rollups service
AVAIL_READER_ROLLUPS_PORT=5004
## Namespace identifier
AVAIL_READER_NAMESPACE=10008


# Blockchain Configuration

## Initial block number to start reading from
AVAIL_READER_START_BLOCK=1630728
## Offset from the start block
AVAIL_READER_BLOCK_OFFSET=25


# Database Configuration

## Maximum number of open connections to the database
DB_MAX_OPEN_CONNS=25
## Maximum number of idle connections in the pool
DB_MAX_IDLE_CONNS=10
## Maximum lifetime of a connection in seconds (30 minutes)
DB_CONN_MAX_LIFETIME=1800
## Maximum idle time of a connection in seconds (5 minutes)
DB_CONN_MAX_IDLE_TIME=300


# Logging Configuration

## Log level (debug, info, warn, error)
AVAIL_READER_LOG_LEVEL=debug
## Add source code location to log entries
AVAIL_READER_LOG_ADD_SOURCE=true
## Use colored output in logs
AVAIL_READER_LOG_USE_COLOR=true
## Time format for log entries
AVAIL_READER_LOG_TIME_FORMAT="[15:04:05.000]"