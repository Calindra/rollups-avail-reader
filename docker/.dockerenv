# Required Configuration
CARTESI_BLOCKCHAIN_WS_ENDPOINT=        # WebSocket endpoint for the blockchain connection
CARTESI_DATABASE_CONNECTION=           # PostgreSQL connection string

# Server Configuration
AVAIL_READER_SERVER_HOST=0.0.0.0      # Host to bind the HTTP server
AVAIL_READER_SERVER_PORT=8080         # Port for the HTTP server
AVAIL_READER_SERVER_TIMEOUT=30        # HTTP server timeout in seconds
AVAIL_READER_ROLLUPS_PORT=5004        # Port for Rollups service
AVAIL_READER_NAMESPACE=10008          # Namespace identifier

# Blockchain Configuration
AVAIL_READER_START_BLOCK=1630728      # Initial block number to start reading from
AVAIL_READER_BLOCK_OFFSET=25          # Offset from the start block

# Database Configuration
DB_MAX_OPEN_CONNS=25                  # Maximum number of open connections to the database
DB_MAX_IDLE_CONNS=10                  # Maximum number of idle connections in the pool
DB_CONN_MAX_LIFETIME=1800             # Maximum lifetime of a connection in seconds (30 minutes)
DB_CONN_MAX_IDLE_TIME=300             # Maximum idle time of a connection in seconds (5 minutes)

# Logging Configuration
AVAIL_READER_LOG_LEVEL=debug          # Log level (debug, info, warn, error)
AVAIL_READER_LOG_ADD_SOURCE=true      # Add source code location to log entries
AVAIL_READER_LOG_USE_COLOR=true       # Use colored output in logs
AVAIL_READER_LOG_TIME_FORMAT="[15:04:05.000]" # Time format for log entries